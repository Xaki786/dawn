<div class="page-width page-margin">
<h1>{{ section.settings.text_title }}</h1>
  <div class="flex-parent">
  {% for block in section.blocks %} 
    <div>
    <div>{{ block.settings.subtitle }}</div>
    <div>
    	<img src={{ block.settings.image | image_url }} width="500" height="500" alt="No Problem" />
    </div>
    </div>  
  {% endfor %}
  </div>
</div>
{% stylesheet %}
.flex-parent {
   display: flex;
   flex-wrap: wrap;
}
{% endstylesheet %}
{% schema %}
{
    "name": "Test Section",
    "tag": "section",
    "class": "slideshow",
    "settings": [      
      {
        "type": "text",
        "id": "text_title",
        "label": "Heading",
        "default": "Quick links"
      }
    ],
	"blocks": [
		{
         "name": "Test Block",
         "type": "slide",
         "settings": [
           {
             "type": "image_picker",
             "id": "image",
             "label": "Image"
           },
			{
             "type": "text",
             "id": "subtitle",
			 "label": "Heading",
             "default": "Block Title"
           }
         ]
     	}
	]
	
}
{% endschema %}